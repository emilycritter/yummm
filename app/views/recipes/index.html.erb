<div class="recipe-list">
  <% @recipes.each do |recipe| %>
    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand" style="background: url('<%= recipe.photo_url %>'); background-size: cover;">
        <h2 class="mdl-card__title-text"><%= recipe.name %></h2>
      </div>
      <div class="mdl-card__supporting-text">
        <%= recipe.description %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to recipe.name.upcase, recipe_path(id: recipe.id) %>
      </div>
    </div>
  <% end %>
</div>
